<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin">
        <Button
            android:id="@+id/view_get_all_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取所有朋友" />
        <Button
            android:id="@+id/view_get_all_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取所有用户" />
        <Button
            android:id="@+id/view_delete_current_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除当前用户" />

        <Button
            android:id="@+id/view_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录" />

        <Button
            android:id="@+id/view_getFriend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取我的朋友表" />

        <Button
            android:id="@+id/view_getFriendUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取朋友表用户" />

        <Button
            android:id="@+id/view_updateSex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更新性别" />


    </LinearLayout>
</RelativeLayout>