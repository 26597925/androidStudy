<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/title_bar_normal" />

        <Button
            android:id="@+id/btn_insert_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="skip418"
            android:text="插入数据" />

        <Button
            android:id="@+id/btn_query_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="skip419"
            android:text="查询所有" />

        <Button
            android:id="@+id/btn_clear_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="skip42"
            android:text="清空表数据" />

        <Button
            android:id="@+id/btn_insert_new_db"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="skip43"
            android:text="插入新数据库" />

        <Button
            android:id="@+id/btn_room_insert_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="room插入一条" />

        <Button
            android:id="@+id/btn_room_insert_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="room批量插入" />

        <Button
            android:id="@+id/btn_room_query_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="room查询所有" />

        <Button
            android:id="@+id/btn_room_clear_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="room删除所有" />

        <Button
            android:id="@+id/btn_room_query_by_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="room根据id查询" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
