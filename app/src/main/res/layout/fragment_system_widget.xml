<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="onItemClickListener"
            type="example.tablayout.SystemWidgetFragment.OnItemClickListener" />
    </data>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/windows_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:divider="@drawable/divider_gray_horizontal"
            android:dividerPadding="@dimen/activity_horizontal_margin"
            android:orientation="vertical"
            android:showDividers="middle">

            <TextView
                android:id="@+id/layout_item_42"
                style="@style/text_home_item"
                android:onClick="@{onItemClickListener::skip42}"
                android:text="复杂布局" />

            <TextView
                android:id="@+id/btn_address"
                style="@style/text_home_item"
                android:onClick="@{onItemClickListener::skip2}"
                android:text="address" />

            <TextView
                android:id="@+id/btn_album"
                style="@style/text_home_item"
                android:onClick="@{onItemClickListener::skip1}"
                android:text="album" />

            <TextView
                android:id="@+id/btn_dialog"
                style="@style/text_home_item"
                android:onClick="@{onItemClickListener::skip31}"
                android:text="各种对话框" />

            <TextView
                android:id="@+id/btn_wheel"
                style="@style/text_home_item"
                android:onClick="@{onItemClickListener::skip4}"
                android:text="wheel" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</layout>
