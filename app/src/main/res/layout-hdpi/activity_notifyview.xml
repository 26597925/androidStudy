<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.style.view.CustomNotifyView
        android:layout_width="20dp"
        android:layout_height="20dp"
        custom:notifyText="0" />

    <com.style.view.CustomNotifyView
        android:layout_width="25dp"
        android:layout_height="25dp"
        custom:notifyBackgroundColor="#00ff00"
        custom:notifyText="1"
        custom:notifyTextColor="#ff0000"
        />

    <com.style.view.CustomNotifyView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        custom:notifyText="2" />

    <com.style.view.CustomNotifyView
        android:layout_width="35dp"
        android:layout_height="35dp"
        custom:notifyBackgroundColor="#0000ff"
        custom:notifyText="3" />

    <com.style.view.CustomNotifyView
        android:id="@+id/customNotifyView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        custom:notifyText="4"
        custom:notifyTextSize="25sp" />

    <com.style.view.CustomNotifyView
        android:layout_width="45dp"
        android:layout_height="45dp"
        custom:notifyBackgroundColor="#000000"
        custom:notifyText="20" />

    <com.style.view.CustomNotifyView
        android:id="@+id/view_change"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="100dp"
        custom:notifyText="6"
        custom:notifyTextSize="35sp" />

    <com.style.view.CustomNotifyView
        android:layout_width="45dp"
        android:layout_height="45dp"
        custom:notifyBackgroundColor="@color/colorAccent" />

    <com.style.view.CustomNotifyView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        custom:notifyText="8" />

    <com.style.view.CustomNotifyView
        android:layout_width="35dp"
        android:layout_height="35dp"
        custom:notifyBackgroundColor="#0000ff" />

    <com.style.view.CustomNotifyView
        android:layout_width="30dp"
        android:layout_height="30dp" />

    <com.style.view.CustomNotifyView
        android:layout_width="25dp"
        android:layout_height="25dp"
        custom:notifyBackgroundColor="#00ff00" />

    <com.style.view.CustomNotifyView
        android:layout_width="10dp"
        android:layout_height="10dp" />

    <com.style.view.CustomNotifyView
        android:layout_width="15dp"
        android:layout_height="15dp" />

    <com.style.view.CustomNotifyView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_centerInParent="true" />

    <com.style.view.CustomNotifyView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_centerInParent="true" />

    <com.style.view.CustomNotifyView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_centerInParent="true" />

    <com.style.view.CustomNotifyView
        android:id="@+id/custom"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerInParent="true" />
</LinearLayout>